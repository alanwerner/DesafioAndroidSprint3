<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/filme_item_favoritos_imagem"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/filme_item_favoritos_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/filme_item_favoritos_imagem"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hocus Pocus 2" />

        <TextView
            android:id="@+id/filme_item_favoritos_lancamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/filme_item_favoritos_titulo"
            app:layout_constraintTop_toBottomOf="@+id/filme_item_favoritos_titulo"
            tools:text="2022-09-27" />

        <TextView
            android:id="@+id/filme_item_favoritos_avaliacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/filme_item_favoritos_lancamento"
            app:layout_constraintTop_toBottomOf="@+id/filme_item_favoritos_lancamento"
            tools:text="7.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>